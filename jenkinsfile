pipeline{
    agent any
        tools {
            terraform 'terraform'
    }
    stages{
        stage ('Git Checkout') {
        steps {
            git branch: 'main', url: 'https://github.com/olisah82/terraform-practice.git'
     }
  }
        
        stage('Terraform Init'){
            steps{
                sh 'terraform init'
            }
        }
        
        stage('Terraform plan'){
            steps{
                sh 'terraform plan'
            }
        }
        
        
        stage('Terraform apply'){
            steps{
                sh 'terraform apply --auto-approve'
            }
        }
        
    }
        
}
